---
import RootLayout from "@layouts/RootLayout.astro";
import HeroSection from "@components/landing/HeroSection.astro";
import RutasSection from "@components/landing/RutasSection.astro";
import Footer from "@components/Footer.astro";
import { PATHS_TEST } from "@utils/constants/Rutas";
---

<RootLayout title="Bienvenido">
	<HeroSection title="Pagina principal" description="Este es una landing page desarrollada en astro, para testear el funcionamiento de la misma." />
	<RutasSection rutas={PATHS_TEST} />
</RootLayout>
<Footer />

<style>
	.title {
		@apply text-3xl my-5 text-center;
	}
</style>
