---
import { YouTube } from "@astro-community/astro-embed-youtube";
import RootLayout from "@layouts/RootLayout.astro";
import HeroSection from "@components/landing/HeroSection.astro";
import RutasSection from "@components/landing/RutasSection.astro";
import Footer from "@components/Footer.astro";
import { PATHS_TEST } from "@utils/constants/Rutas";
---

<RootLayout title="Bienvenido">
			<YouTube
				id="xtTy5nKay_Y"
				class="video-yt w-80"
				poster="https://images-assets.nasa.gov/image/0302063/0302063~orig.jpg"
				params="start=10&end=30&controls=1&autoplay=1"
				playlabel="Play the video"
				color="#fff"
			/>


	<HeroSection
		title="Pagina principal"
		description="Este es una landing page desarrollada en astro, para testear el funcionamiento de la misma."
	/>
	<RutasSection rutas={PATHS_TEST} />
</RootLayout>
<Footer />

<style>
	.title {
		@apply text-3xl my-5 text-center;
	}

	.video-yt {
		@apply mx-auto
	}

</style>
